@model IEnumerable<PhoneShopASPnet.Models.Category>

<div class="aside">
	<h3 class="aside-title"> Loại hàng </h3>
	<div class="checkbox-filter">
		@foreach (var item in Model)
		{
			<div class="input-checkbox">
				<input type="checkbox" id="category-1">
				<label for="category-1">
					<span></span>
					@item.CategoryName

					@if(item.Products != null)
					{
						<small>(@item.Products.ToList().Count)</small>
					}
					else
					{
						<small>(0)</small>
					}

				</label>
			</div>
		}
	</div>
</div>